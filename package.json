{
  "name": "@chillapi/generator",
  "version": "1.0.3",
  "description": "ChillAPI Express generator",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prebuild": "rimraf dist/*",
    "lint": "tslint -c tslint.json -p tsconfig.json --fix",
    "tsc": "tsc",
    "build": "handlebars src/service/generate/templates -f src/service/generate/templates/precompiled.js && npm run lint && npm run tsc",
    "postbuild": "copyfiles -u 1 \"src/**/*\" -e \"**/*.ts\" -e \"**/*.handlebars\" dist",
    "build:watch": "tsc -w",
    "dev:start": "nodemon --watch dist --exec node .",
    "dev": "concurrently \"npm run build:watch\" \"npm run dev:start\"",
    "start": "node .",
    "test": "jest",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chillapi/core.git"
  },
  "keywords": [
    "low-code",
    "sql",
    "openapi"
  ],
  "bin": {
    "chillapi": "bin/start"
  },
  "author": "Valentin Raduti",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chillapi/issues"
  },
  "homepage": "https://github.com/chillapi#readme",
  "dependencies": {
    "@chillapi/api": "1.0.31",
    "@chillapi/module-discovery": "^1.0.6",
    "handlebars": "^4.7.6",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.20",
    "yargs": "^15.4.1"
  },
  "peerDependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "express-openapi-validator": "^4.0.2",
    "express-session": "^1.17.1",
    "jwks-rsa": "^1.12.0",
    "express-jwt": "^6.0.0",
    "multer": "^1.4.2",
    "swagger-ui-express": "^4.1.4"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-typescript": "^7.12.7",
    "@types/cors": "^2.8.8",
    "@types/express": "^4.17.7",
    "@types/express-session": "^1.17.2",
    "@types/handlebars": "^4.1.0",
    "@types/jest": "^26.0.19",
    "@types/js-yaml": "^3.12.5",
    "@types/lodash": "^4.14.159",
    "@types/multer": "^1.4.5",
    "@types/node": "^14.0.27",
    "@types/passport": "^1.0.4",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/yargs": "11.0.0",
    "concurrently": "^5.2.0",
    "copyfiles": "^2.4.1",
    "jest": "^27.0.5",
    "nodemon": "^2.0.4",
    "rimraf": "^3.0.2",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.2",
    "typescript": "^4.0.5",
    "husky": "^6.0.0"
  }
}
